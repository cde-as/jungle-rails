<tr>
  <td><%= image_tag line_item.product.image.thumb.url %></td>
  <td>
    <h4><%= line_item.product.name %></h4>
    <p><%= line_item.product.description %></p>
  </td>
  <td><%= number_to_currency(line_item.product.price, precision: 2) %></td>
  <td><%= line_item.quantity %></td>
  <td><%= number_to_currency(line_item.total_price, precision: 2) %></td>
</tr>